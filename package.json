{
  "name": "@stationuli/monorepo",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:rust": "cargo fmt --all",
    "format:rust:check": "cargo fmt --all -- --check",
    "lint": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\" && cargo fmt --all -- --check",
    "prepare": "husky",
    "dev:mobile": "pnpm --filter stationuli-mobile tauri android dev",
    "build:mobile": "pnpm --filter stationuli-mobile tauri android build",
    "dev:desktop": "pnpm --filter stationuli-desktop tauri  dev",
    "build:desktop": "pnpm --filter stationuli-desktop tauri build"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "arrowParens": "always",
    "endOfLine": "lf",
    "bracketSpacing": true,
    "jsxSingleQuote": false,
    "plugins": []
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write"
    ],
    "*.rs": [
      "cargo fmt --"
    ]
  }
}
